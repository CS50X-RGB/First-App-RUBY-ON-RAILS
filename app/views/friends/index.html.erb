<!-- Apply green color to the notice message -->
<p class="text-green-500"><%= notice %></p>
<div class="flex flex-col bg-pink-400 shadow-xl shadow-blue-800 rounded-xl">
<h1 class="text-4xl text-white font-bold text-center p-4 font-bold">Friends</h1>

<div id="friends">
  <% @friends.each do |friend| %>
    <!-- Add a div container for each friend with flexbox styling -->
    <div class="friend-container text-3xl p-4 flex bg-blue-400 m-3 flex-row gap-3 flex-wrap border-2 border-green-500 rounded-xl">
      <%= render friend %>
    </div>
    <p>
      <!-- Create a link to show the friend's details with pink background and white text -->
      <%= link_to "Show this friend", friend, class: "text-center m-4 rounded-xl text-xl md:text-3xl px-4 py-2 bg-pink-600 text-white" %>
    </p>
  <% end %>
</div>

<!-- Add a link to create a new friend -->
<%= link_to "New friend", new_friend_path, class: "text-center flex justify-center items-center m-6 rounded-xl text-xl md:text-3xl px-4 py-2 bg-pink-600 text-white"  %>
</div>